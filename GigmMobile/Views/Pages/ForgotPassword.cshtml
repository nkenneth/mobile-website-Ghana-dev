<!--Section: Live preview-->
<section class="form-dark">

    <!--Form without header-->
    <div class="" ng-controller="resetPassword as vm">
        <div class="text-white  py-5 px-5 ">

            <!--Header-->
            <div class="text-center">
                <h3 class="black-text mb-5 mt-4 font-bold"><strong>RESET</strong> <a class="red-text font-bold"><strong> PASSWORD</strong></a></h3>
            </div>
            <form name="resetPasswordForm">
                <!--Body-->
                <div class="md-form form-group">
                    <input type="text" id="verificationCode" name="VerificationCode" ng-minlength="6" class="form-control" ng-model="vm.resetPasswordObj.VerificationCode" required>
                    <label for="verificationCode">Activation Code</label>
                    <p ng-show="resetPasswordForm.VerificationCode.$invalid && !resetPasswordForm.VerificationCode.$pristine" class="red-text">Valid verification Code is required</p>
                </div>
                <div class="md-form">
                    <input type="text" id="Username" name="Username" class="form-control" ng-model="vm.resetPasswordObj.Username" required>
                    <label for="Username">Enter phone number or email</label>
                    <p ng-show="resetPasswordForm.Username.$invalid && !resetPasswordForm.Username.$pristine" class="red-text">Phone number or email is required</p>
                </div>
                <div class="md-form ">
                    <input type="password" ng-minlength="8" id="NewPassword" name="NewPassword" class="form-control" ng-model="vm.resetPasswordObj.NewPassword" required>
                    <label for="NewPassword">Your new password</label>
                    <p ng-show="resetPasswordForm.NewPassword.$invalid && !resetPasswordForm.NewPassword.$pristine" class="red-text">Phone number or email is required</p>
                </div>
                <div class="md-form pb-3">
                    <input type="password" ng-disabled="resetPasswordForm.NewPassword.$invalid" id="repeatPassword" name="repeatPassword" ng-minlength="8" ng-maxlength="{{vm.resetPasswordObj.NewPassword.length}}" maxlength="{{vm.resetPasswordObj.NewPassword.length}}" class="form-control" ng-model="vm.repeatPassword" required>
                    <label for="repeatPassword">Repeat password</label>
                    <p ng-show="resetPasswordForm.repeatPassword.$invalid && !resetPasswordForm.repeatPassword.$pristine" class="red-text">Pls confirm password, must be the same as above</p>
                </div>
                <!--Grid row-->
                <div class="row d-flex align-items-center mb-4">
                    <!--Grid column-->
                    <div class="text-center mb-3 col-md-12">
                        <button type="button" ng-click="vm.resetPassword(1)" class="btn btn-danger btn-block btn-rounded z-depth-1" ng-disabled="resetPasswordForm.$invalid || (vm.resetPasswordObj.NewPassword !== vm.repeatPassword)">Reset Password</button>
                    </div>
                    <!--Grid column-->
                </div>
                <!--Grid row-->
                <!--Grid column-->
                <div class="col-md-12">
                    <p class="font-small white-text d-flex justify-content-end">Have an account? <a href="javascript:history.back()" class="red-text ml-1 font-bold"> Log in</a></p>
                </div>
                <!--Grid column-->
            </form>
        </div>
        <div class="loader" style="background-color:rgba(0, 0, 0, 0.70)" ng-if="vm.loading">
            <img src="~/img/spinner.gif" class="img-fluid flex-center">
        </div>
    </div>
    <!--/Form without header-->
  
</section>
<!--Section: Live preview-->
