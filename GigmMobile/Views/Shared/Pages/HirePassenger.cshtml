<style>

    .card-body {
        -ms-flex: 1 1 auto;
        flex: 1 1 auto;
        padding: 1rem 1.25rem 0.01rem;
    }

    .header .fa-angle-down {
        margin-left: 50%;
        font-size: 30px;
        opacity: .5;
    }

    #form5 {
        margin: 12% auto 0 5%;
        width: 90%;
    }

    .adjust {
        margin: 5% auto 0 5% !important;
    }

    .switch-selection {
        /* background: #db0c0c !important; */
        border-radius: 20px;
        /*background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #4fc9ee), color-stop(100%, white));*/
        background-image: -webkit-linear-gradient(top, #EF3A37, #b52929) !important;
        background-image: -moz-linear-gradient(top, #EF3A37, #b52929);
        background-image: -ms-linear-gradient(top, #EF3A37 #b52929);
        background-image: -o-linear-gradient(top, #EF3A37, #b52929);
        background-image: linear-gradient(top, #EF3A37, #b52929);
        color: white !important;
    }

    #form4 {
        margin: 5% auto 0 5% !important;
        width: 90%;
    }

    #click-me {
        display: flex;
        flex-wrap: nowrap
    }
